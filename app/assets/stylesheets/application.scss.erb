html {
  height: 100% !important;
}
body {
  min-height: 100%;
  position: relative;
}
body:after {
  content: '';
  display: block;
  height: 50px;
}

.simple_form label, .simple_form div.input {
  display: block;
  padding: 2px;
}

label.password {
  width: 25%;
}

.simple_form .radio input {
  margin-left: -18px;
  margin-top: 3px;
}

.simple_form .radio label {
  margin-left: 20px;
}

#header-navbar .navbar-brand {
  width: auto;
  font-size: 2em;
  font-weight: bold;
  color: $apt_black;
  padding: 0;
  height: 75px;
  text-indent: 10px;
  margin-left: -35px;
  margin-top: 10px;
}

#header-navbar {
  color: #45474d;
}

#user-util-collapse {
  padding: 10px;
  float: right;
}

@media (min-width: 768px) and (max-width: 979px) {
  .logo-text {
    width: auto;
  }
}

@media (min-width: 980px) and (max-width: 1199px) {
  .logo-text {
    width: auto;
  }
}

#sortAndPerPage {
  border-top: 1px solid #DDDDDD;
  margin-top: 1em;
  padding-top: 1em;
}

.glyphicon {
  font-family: 'Glyphicons Halflings';   /* to enable glyphicon */
  padding-right: 0.25em;
}

.search-scope .label-text {
  font-weight: normal;
}

.top-content-title { font-weight: bold; }
.panel-heading h4 { font-weight: bold; }
.index_title a { font-weight: bold; }
.page-header h1 { font-weight: bold; }

footer {
  margin-top: 45px;
  padding-top: 15px;
  padding-bottom: 10px;
  border-top:  1px solid #eaeaea;
  width: 100%;
  bottom: 0;
  position: absolute;
  height: 50px;
  color: #999;
  a {
    color: #555;
    &:hover {
      color:  #222;
    }
  }
  small {
    float: left;
  }
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 10px;
    }
  }
}

p.italic {
  font-style: italic;
  font-size: 12px;
}

@mixin fix-title {
  text-indent: 40px;
  width: auto;
}

#header-navbar .navbar-brand {@include fix-title;}

.navbar-right {
  margin-right: -10px;
}

#search_selectors {
  padding-top: 5px;
  display: inline;
}

#search-navbar {
  padding-top: 20px;
}

.search-container {
  width: 60%;
}

#search-navbar input {
  line-height: 1.5;
  height: 34px;
}

.container {
  width: 92% !important;
}

/* MISC */
.gravatar {
  float: left;
  margin-right: 10px;
}

a.block-link {
  display: block;
}

.search-scope {
  margin-right: 0.5em;
}

form a {
  padding-left: 10px;
}

.alert, .help-inline {
  color: #FF0000;
}

.alert-warning {
  color: #8a6d3b;
  background-color: #fcf8e3;
  border-color: #faebcc;
}

.alert-info {
  background-color: #d9edf7;
  border-color: #bce8f1;
  color: #31708f;
}

.alert-success {
  color: #3c763d;
  background-color: #dff0d8;
  border-color: #d6e9c6;
}

.alert-danger {
  color: #a94442;
  background-color: #f2dede;
  border-color: #ebccd1;
}

form .alert {
  padding: 0px;
}

.help-inline {
  padding-left: 15px;
}

.auditinfo h3 { font-weight: bold; }

input#q {
  width: 260px;
}

#chart-frame {
  box-sizing: border-box;
  width: 850px;
  height: 450px;
  padding: 20px 15px 15px 15px;
  margin: 15px auto 30px auto;
  border: 1px solid #ddd;
  background: #fff;
  background: linear-gradient(#f6f6f6 0, #fff 50px);
  background: -o-linear-gradient(#f6f6f6 0, #fff 50px);
  background: -ms-linear-gradient(#f6f6f6 0, #fff 50px);
  background: -moz-linear-gradient(#f6f6f6 0, #fff 50px);
  background: -webkit-linear-gradient(#f6f6f6 0, #fff 50px);
  box-shadow: 0 3px 10px rgba(0,0,0,0.15);
  -o-box-shadow: 0 3px 10px rgba(0,0,0,0.1);
  -ms-box-shadow: 0 3px 10px rgba(0,0,0,0.1);
  -moz-box-shadow: 0 3px 10px rgba(0,0,0,0.1);
  -webkit-box-shadow: 0 3px 10px rgba(0,0,0,0.1);

  #chart {
    width: 800px;
    height: 400px;
    font-size: 14px;
    line-height: 1.2em;
  }
}

i.doc-action-btn {
  -moz-border-bottom-colors: none;
  -moz-border-left-colors: none;
  -moz-border-right-colors: none;
  -moz-border-top-colors: none;
  /*background-image: linear-gradient;*/
  background-repeat: repeat-x;
  border-color: #CCCCCC #CCCCCC #B3B3B3;
  border-image: none;
  border-radius: 4px;
  border-style: solid;
  border-width: 1px;
  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
  cursor: pointer;
  display: inline-block;
  font-size: 14px;
  line-height: 20px;
  margin-bottom: 0;
  padding: 4px 12px;
  text-align: center;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75);
  vertical-align: middle;
}

.btn-danger{
  background-image: linear-gradient(to bottom, #d9534f, #d43f3a);
  color: #FFFFFF;
}

.btn-normal{
  background-image: linear-gradient(to bottom, #FFFFFF, #E6E6E6);
  color: #2d5f6c;
}

.btn-success{
  background-image: linear-gradient(to bottom, #5cb85c, #4cac4c);
  color: #FFFFFF;
}

.btn-warning{
  background-image: linear-gradient(to bottom, #fbb450, #f89406);
  color: #FFFFFF;
}

tr.Failed, dt.Failed, dd.Failed {
  background-color: #f2dede;
}

tr.Success, dt.Success, dd.Success {
  background-color: #dff0d8;
}

i.btn:hover,
i.btn:focus {
  text-decoration: none;
  background-position: 0 -15px;
  -webkit-transition: background-position .1s linear;
  -moz-transition: background-position .1s linear;
  -o-transition: background-position .1s linear;
  transition: background-position .1s linear;
}
i.btn:hover,
i.btn:focus {
  background-color: #e6e6e6;
}

i.btn.active,
i.btn.active:hover {
  background-color: #f2f2f2;
  border-color: #e6e6e6;
}
i.btn.disabled:hover,
i.btn.disabled:focus,
i.btn.disabled:active,
i.btn.disabled.active,
i.btn[disabled] i.btn:hover,
i.btn[disabled] i.btn:focus,
i.btne[disabled] i.btn:active,
i.btn[disabled] i.btn.active {
  background-color: #ffffff;
  border-color: #ffffff;
}

.facet_limit-active {
  border-color:#d6e9c6
}

.facet_limit-active>.panel-heading {
  color: #3c763d;
  background-color: #dff0d8;
  border-color: #d6e9c6;
}

.facet_limit-active>.panel-heading+.panel-collapse>.panel-body {
  border-top-color: #d6e9c6;
  border-bottom-color: #d6e9c6;
}

.panel-success, .panel-heading, .badge, .facet_limit-active {
  color:#dff0d8;
}

.facet-values li .selected {
  color: #3c763d;
}

.facet-values li .remove {
  color: #777777;
  text-align: right;
  padding-left: 20px;
}

.facet-values .facet-label {
  display: table-cell;
  padding-right: 1em;
  text-indent: -15px;
  padding-left: 15px;
  padding-bottom: 6px;
}

.facet-values .facet-count {
  display: table-cell;
  vertical-align: top;
  text-align: right;
}

.glyphicon-chevron-right, .glyphicon-chevron-down {
  float: right;
}

dt, dd {
  line-height: 1.428571429;
}

.dl-horizontal dd {
  margin-bottom: 6px;
}

.dl-invert dt {
  font-weight: normal;
  color: #777777;
}

.form-horizontal .control-label {
  text-align: left;
  margin-bottom: 0;
  padding-top: 7px;
}

.form-control {
  display: block;
  width: 25%;
  height: 25px;
  padding: 3px 3px;
  font-size: 14px;
  line-height: 1;
  color: #555555;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  -o-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
}

.form-group {
  margin-bottom: 3px;
}

div.flot-y-axis div.flot-tick-label {
  margin-left: -70px;
  left: 70px !important;
}

.white-href {
  color: #fff;
}

.navbar {
  margin-bottom: 0px;
}

.footer {
  margin-top: 0px;
}

.navbar-default .navbar-nav > li > a {
  color: #fff;
}

.navbar-default .navbar-nav > li > a:hover {
