$logo_image: '';
$apt_red: #800000;
$apt_black: #180000;

@import "bootstrap-sprockets";
@import "bootstrap";
@import "generic_files.scss";
@import "institutions.scss";
@import "intellectual_objects.scss";
@import "premis_events.scss";
