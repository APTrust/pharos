<div id="facets" class="facets sidenav">

  <div class="top-panel-heading panel-heading">
    <h3> Limit your search </h3>
  </div>

  <div id="facet-panel-collapse" class="collapse panel-group">
    <div class="panel panel-default facet_limit">
      <div class="collapsed collapse-toggle panel-heading" data-toggle="collapse">
        <h5 class="panel-title">
          <a data-no-turbolink="true" href="#">Institution</a>
        </h5>
      </div>
      <div id="facet-institution" class="panel-collapse facet-content collapse">
        <div class="panel-body">
          <ul class="facet-values list-unstyled">
            <% @institutions.each do |institution| %>
              <% current_inst = Institution.find(institution) %>
                <li>
                  <span class="facet-label"><a class="facet_select" search_field=all_fields" href=""><%= current_inst.name %></a></span>
                  <span class="facet-count"><%= @counts[:inst] %></span>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

</div>