<h3>Show:</h3>
<%= form_tag action: 'search', controller: 'catalog' do %>

    <label class="search-scope">
      <%= radio_button_tag :state, 'A', params['state'].blank? || params['state'] == 'A', onclick: 'this.form.submit();'%>
      <span class="label-text">Active</span>
    </label>

    <label class="search-scope">
      <%= radio_button_tag :state, 'all', params['state'] == 'all', onclick: 'this.form.submit();' %>
      <span class="label-text">All</span>
    </label>

    <label class="search-scope">
      <%= radio_button_tag :state, 'D', params['state'] == 'D', onclick: 'this.form.submit();' %>
      <span class="label-text">Deleted</span>
    </label>

      <!--<button type="submit" class="search-submit btn btn-primary" id="aux-search-submit-header">-->
        <!--Submit-->
      <!--</button>-->
<% end %>