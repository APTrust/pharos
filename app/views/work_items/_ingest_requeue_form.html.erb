<div id="ingest_form" class="hidden">
  <div class="">
    <span id="ui-id-1" class=""><h4>Confirm Requeue for Ingest</h4></span>
  </div>
  <div id="dialog-form-ingest" class="">
    <form>
      <fieldset>
        <label for="stage">What stage would you like to requeue to?</label><br>
        <p id="ingest_error" class="hidden alert alert-error">This field is required.</p>
        <% if @work_item.stage == Pharos::Application::PHAROS_STAGES['store'] %>
            <input type="radio" name="stage" value="<%= Pharos::Application::PHAROS_STAGES['fetch'] %>"> Fetch<br>
            <input type="radio" name="stage" value="<%= Pharos::Application::PHAROS_STAGES['store'] %>"> Store
        <% elsif @work_item.stage == Pharos::Application::PHAROS_STAGES['record'] %>
            <input type="radio" name="stage" value="<%= Pharos::Application::PHAROS_STAGES['fetch'] %>"> Fetch<br>
            <input type="radio" name="stage" value="<%= Pharos::Application::PHAROS_STAGES['record'] %>"> Record
        <% else %>
            <input type="radio" name="stage" value="<%= Pharos::Application::PHAROS_STAGES['fetch'] %>"> Fetch<br>
        <% end %>
      </fieldset>
    </form>
  </div>
  <br>
  <div class="">
    <div class="">
      <button type="submit" id="ingest_form_submit" class="btn doc-action-btn btn-success">
        <i class="glyphicon glyphicon-repeat"></i>Requeue Item</button>
      <button type="button" id="ingest_form_cancel" class="btn doc-action-btn btn-warning">
        <i class="glyphicon glyphicon-remove"></i>Cancel</button>
    </div>
  </div>
</div>