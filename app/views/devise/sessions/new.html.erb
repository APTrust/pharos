<% @title = 'Sign In' %>

<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true %></div>

    <div><%= f.label :password %><br />
      <%= f.password_field :password %></div>

    <br/>
    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= check_box_tag(:use_backup_code) %> <%= label_tag(:use_backup_code, 'I need to use a backup code to log in.') %></div>

    <br/>
    <%= button_tag(type: 'submit', class: "btn doc-action-btn btn-normal", id: "login-btn") do %>
        <i class="glyphicon glyphicon-log-in"></i> Sign In
    <% end %>
    <%= render "devise/shared/links" %>

<% end %>

<div id="push-notification-loader" class="hidden">
  <h4>A push notification has been sent to your Authy App, if you have one. Otherwise, you have been sent a text message. Waiting for a response...</h4>
  <div class="loader"></div>
</div>