<h2>General Overview for <%= @institution.name %></h2>

<dl class="dl-horizontal">
  <dt>Intellectual Objects</dt>
  <dd><%= @report[:intellectual_objects] %></dd>
  <dt>Generic Files</dt>
  <dd><%= @report[:generic_files] %></dd>
  <dt>Premis Events</dt>
  <dd><%= @report[:premis_events] %></dd>
  <dt>Work Items</dt>
  <dd><%= @report[:work_items] %></dd>
  <dt>Average File Size</dt>
  <dd><%= number_to_human_size(@report[:average_file_size]) %></dd>
  <dt>Total Bytes Preserved</dt>
  <dd><%= number_to_human_size(@report[:bytes_by_format]['all']) %></dd>
  <% if @report[:subscribers].nil? || @report[:subscribers] == {} %>
      <dt>Subscribers</dt>
      <dd>None</dd>
  <% else %>
      <dt>Subscribers</dt>
      <dd>-----------</dd>
      <% @report[:subscribers].each do |key, value| %>
          <dt><%= key %></dt>
          <dd><%= number_to_human_size(value) %></dd>
      <% end %>
  <% end %>
  <dt>Bytes by Type</dt>
  <dd>-----------</dd>
  <% @report[:bytes_by_format].each do |key, value| %>
      <% unless key == 'all' %>
          <dt><%= key %></dt>
          <dd><%= number_to_human_size(value) %></dd>
      <% end %>
  <% end %>
</dl>

<%= link_to "#{@institution.identifier}?format=pdf", {class: 'btn doc-action-btn btn-normal'} do %>
    <i class="glyphicon glyphicon-download-alt"></i> Save Report as PDF
<% end %>