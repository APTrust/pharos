              <div id="tabs-1"><%= render partial: '/shared/search_form' %></div>
            </div>
        <% end %>
      </div>
    </div>
    <script>$("#tabs").tabs();</script>

    <% if controller_name == 'work_item' %>
        <script>select_wi_tab();</script>
    <% end %>

    <div class="collapse navbar-collapse col-md-3" id="user-util-collapse">
      <% if user_signed_in? %>
          <%= render partial: '/user_util_links' %>
      <% else %>
          <%= render partial: '/user_sign_in_links' %>
      <% end %>
    </div>

  </div>
