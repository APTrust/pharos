<%= form_tag action: 'index', controller: "intellectual_object" do %>
    <div class="input-group" id="search">

      <span class="input-group-addon">
        <label for="search_field" class="sr-only">Intellectual Object Search</label>
        <%= select_tag(:search_field, options_for_select(['All Fields', 'Object Identifier', 'Bag Name', 'Title', 'Alternate Identifier'], h(params[:search_field])), :class=>"search_field") %>
        </span>
      <label for="qq" class="sr-only">Search Box</label>
      <%= text_field_tag :q, params[:q], :placeholder => 'Search...', :class => "search_q q form-control", :id => "q", :autofocus => should_autofocus_on_search_box? %>

      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary search-btn" id="search">
          <span class="submit-search-text">Search</span>
          <span class="glyphicon glyphicon-search"></span>
        </button>
        </span>
    </div>
<% end %>
<script>add_form_classes();</script>