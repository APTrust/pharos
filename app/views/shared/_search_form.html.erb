<%= form_tag method: 'get', action: 'search', controller: 'catalog' do %>
    <div class="input-group" id="search">

      <span class="input-group-addon">
        <label for="search_field" class="sr-only">Search</label>

        <select name="object_type" id="object_type" class="search_field" onchange="configureDropDownLists();"><option value="All Types">All Types</option>
          <option value="Intellectual Objects">Intellectual Objects</option>
          <option value="Generic Files">Generic Files</option>
          <option value="Work Items">Work Items</option>
          <option value="Premis Events">Premis Events</option>
        </select>
        <select name="search_field", id="search_field", class="search_field">
        </select>

      </span>
      <label for="q" class="sr-only">Search Box</label>
      <%= text_field_tag :q, params[:q], :placeholder => 'Search...', :class => 'search_q q form-control', :id => 'q', :autofocus => true %>

      <span class="input-group-btn" class="span5">
        <button type="submit" class="btn btn-primary search-btn" id="search-btn">
          <span class="submit-search-text">Search</span>
          <span class="glyphicon glyphicon-search"></span>
        </button>
        </span>
    </div>
<% end %>