<div id="main-flashes">
  <div class="flash_messages">
    <% if flash[:alert] %>
        <div class="alert alert-warning">
            <%= flash[:alert] %>
            <a class="close" data-dismiss="alert" href="#">×</a>
        </div>
    <% end %>
    <% if flash[:notice] %>
        <div class="alert alert-info">
          <%= flash[:notice] %>
          <a class="close" data-dismiss="alert" href="#">×</a>
        </div>
    <% end %>
    <% if flash[:success] %>
        <div class="alert alert-success">
          <%= flash[:success] %>
          <a class="close" data-dismiss="alert" href="#">×</a>
        </div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-danger">
          <%= flash[:error] %>
          <a class="close" data-dismiss="alert" href="#">×</a>
        </div>
    <% end %>
  </div>
</div>