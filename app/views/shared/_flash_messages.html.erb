<div id="main-flashes">
  <div class="flash_messages">
    <% if flash[:alert] %>
        <div class="alert alert-warning">
            <p><%= flash[:alert] %></p>
            <a class="close" data-dismiss="alert" href="#">×</a>
        </div>
    <% end %>
    <% if flash[:notice] %>
        <div class="alert alert-info">
          <p><%= flash[:notice] %></p>
          <a class="close" data-dismiss="alert" href="#">×</a>
        </div>
    <% end %>
    <% if flash[:success] %>
        <div class="alert alert-success">
          <p><%= flash[:success] %></p>
          <a class="close" data-dismiss="alert" href="#">×</a>
        </div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-danger">
          <p><%= flash[:error] %></p>
          <a class="close" data-dismiss="alert" href="#">×</a>
        </div>
    <% end %>
  </div>
</div>