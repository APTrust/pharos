<div id="oassociation-parent" class="panel panel-default">
  <div id="filter-title-oassociation" class="collapse-toggle panel-heading collapsed" data-toggle="collapse" data-target="#filter-oassociation">
    <h5 class="panel-title">
      Associated Object
    </h5>
  </div>
  <div id="filter-oassociation" class="panel-collapse facet-content collapse" style="height: 0px">
    <div class="panel-body">
      <ul class="facet-values list-unstyled">
        <% if @selected[:object_association] %>
            <% current_obj = IntellectualObject.find(@selected[:object_association]) %>
            <script>selected("oassociation", "<%= current_obj.identifier %>", "<%=url_for(params.except :object_association)%>")</script>
        <% else %>
            <% @object_associations.each do |assc| %>
                <% unless @counts[assc] == 0 || @counts[assc].nil? %>
                    <% current_obj = IntellectualObject.find(assc) %>
                    <li>
                      <span class="facet-label"><a href="<%= current_path('object_association', assc) %>"><%= current_obj.identifier %></a></span>
                      <span class="facet-count"><%= @counts[assc] %></span>
                    </li>
                <% end %>
            <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>