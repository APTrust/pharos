
<h2 class="sr-only">Search Results</h2>
<div id="documents">
    <% counter = @first_number %>
    <% @paged_results.each do |current| %>
        <% if current.is_a?(IntellectualObject) %>
            <%= render 'object_result', counter: counter, current: current %>
        <% elsif current.is_a?(GenericFile) %>
            <%= render 'file_result', counter: counter, current: current %>
        <% elsif current.is_a?(WorkItem) %>
            <%= render 'item_result', counter: counter, current: current %>
        <% end %>
        <% counter = counter+1 %>
        <hr>
    <% end %>
</div>